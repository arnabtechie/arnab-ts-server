{
  "name": "arnab-ts-server",
  "version": "1.0.0",
  "description": "API Server Build on Node, Express, TypeScript & SQL",
  "main": "index.ts",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon",
    "ts-run": "ts-node ./src/index.ts",
    "build": "rimraf dist/ && npx tsc",
    "test": "tsc && npx mocha dist/tests/setup.js 'dist/tests/**/*.test.js'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:restart": "docker-compose restart",
    "docker:down": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnabtechie/arnab-ts-server.git"
  },
  "author": "Arnab Banerjee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arnabtechie/arnab-ts-server/issues"
  },
  "homepage": "https://github.com/arnabtechie/arnab-ts-server#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "typescript": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.11.20",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2"
  }
}
