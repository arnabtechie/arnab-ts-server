{
  "name": "arnab-ts-server",
  "version": "1.0.0",
  "description": "API Server Build on Node, Express, TypeScript & SQL",
  "main": "index.ts",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon",
    "ts-run": "ts-node ./src/index.ts",
    "build": "rimraf dist/ && npx tsc",
    "test": "tsc && npx mocha dist/tests/setup.js 'dist/tests/**/*.test.js'",
    "format": "yarn prettier --write .",
    "lint": "yarn eslint .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:restart": "docker-compose restart",
    "docker:down": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnabtechie/arnab-ts-server.git"
  },
  "author": "Arnab Banerjee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arnabtechie/arnab-ts-server/issues"
  },
  "homepage": "https://github.com/arnabtechie/arnab-ts-server#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.21",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^5.0.1",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "@types/winston": "^2.4.4",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.27.0"
  }
}
